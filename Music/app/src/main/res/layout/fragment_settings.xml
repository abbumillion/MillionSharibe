<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_wb_sunny_black_24dp"
        android:textSize="30dp"
        android:text="night mode" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableStart="@drawable/ic_font_download_black_24dp"
            android:paddingTop="20dp"
            android:text="font"
            android:textSize="30dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableStart="@drawable/ic_file_download_black_24dp"
        android:paddingTop="20dp"
        android:text="files"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableStart="@drawable/ic_volume_up_black_24dp"
        android:paddingTop="20dp"
        android:text="sound"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableStart="@drawable/ic_music_note_black_24dp"
        android:paddingTop="20dp"
        android:text="music"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="20dp"
        android:drawableStart="@drawable/ic_notifications_black_24dp"
        android:text="notification"
        android:textSize="30dp" />

        <TextView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableStart="@drawable/ic_accessibility_black_24dp"
            android:paddingTop="20dp"
            android:text="about"
            android:textSize="30dp" />
</LinearLayout>
    </ScrollView>
</LinearLayout>